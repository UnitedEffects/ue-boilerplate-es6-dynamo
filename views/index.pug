extends layout

block content
  section#head.section
    .container.keyPad
      .row
        .col-md-12.col-lg-12.col-md-offset-1.col-lg-offset-1.text-center
          h2.title United Effects Platform
          h3.subtitle UE Boilerplate ES6 DynamoDB Service
          h4.tagline
            | A boilerplate to help speed along development of an es6 node service with DynamoDB
            br
            |                    You should download DynamoDB local and have an access key ready for your prod env.
          p
          .row
            .col-md-4
              a.btn.btn-default.btn-lg.btn-block(href='/swagger' style="font-size: 1.6em;") Swagger&nbsp;
            .col-md-4
              a.btn.btn-default.btn-lg.btn-block(href='https://github.com/UnitedEffects/ue-boilerplate-es6-dynamo' style="font-size: 1.6em;") Code&nbsp;
            .col-md-4
              a.btn.btn-default.btn-lg.btn-block(href='mailto:' + maintainer style="font-size: 1.6em;") Maintainer &nbsp;